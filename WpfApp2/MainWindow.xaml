<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Example" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите пароль:" Margin="10"/>
            <PasswordBox Name="passwordBox" Width="200" Height="30" Margin="10"/>

            <TextBlock Text="Выберите видео:" Margin="10"/>
            <MediaElement Name="mediaElement" Width="300" Height="200" Margin="10" 
                          Source="video.mp4" LoadedBehavior="Play" UnloadedBehavior="Stop"/>

            <TextBlock Text="Изображение:" Margin="10"/>
            <Image Source="image.png" Width="200" Height="150" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
